doctype html

html(lang='ru')
    head
        title Page Title
        meta(charset='UTF-8')
        link(rel='stylesheet' href='css/main.css')
        link(rel='stylesheet' href='css/test3.css')
        script(src='js/auth.js')
        script(script src="https://cdn.jsdelivr.net/gh/supertokens/supertokens-website/bundle/bundle.js")
        script.
              supertokens.init({
                apiDomain: "http://localhost:3001",
                apiBasePath: "/auth"
              });

    style.
        * {
            box-sizing: border-box;
        }

        /* Style the body */

        body {
            background: url(https://i.pinimg.com/originals/08/b5/49/08b549c185d5972b99890357a2054f3f.jpg);
            background-repeat: no-repeat;
            height: 600px;
            background-position: center;
            background-size: cover;
            position: relative;
            z-index: auto;
            text-align: center;
            background-attachment: fixed;
            font-family: Arial, Helvetica, sans-serif;
            margin: 0;
        }

        /* Column container */
        .row {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-wrap: wrap;
            flex-wrap: wrap;
            margin: 60px;
        }

        .side {
            -ms-flex: 30%;
            flex: 30%;
            padding: 20px;
        }

        /* Main column */
        .content {
            -ms-flex: 70%;
            flex: 70%;
            padding: 20px;
        }

        .card {
            background: white;
            padding: 15px;
            margin-bottom: 15px;

            border-bottom: #de8949;
            border-bottom-style: solid;
            border-bottom-width: 10px;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            text-align: center;

        }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }

        a {
            text-decoration: none;
            color: #675b7c;
        }

        a:hover {
            color: #c93961;
        }

        .ava{
            border-radius: 50%;
            width: 160px;
            height: 160px;
            margin: 0 auto;
        }

    body

        .row
            .side
                .card
                    h2 Информация
                    if(user.avatar)
                        img.ava(src=user.avatar)
                    else
                        img.ava(src='https://media.pn.am/media/issue/197/297/photo/197297.jpg')
                    p Имя: #{user.name}
                    P Создан: #{user.createdAt.toISOString().replace('T', ' ').replace('Z', '').slice(0, 19)}
                    h2 активность пользователя:
                    p Количество постов: #{user.posts.length}
                    if (user.comments)
                        p количество комментариев: #{user.comments.length}
                    else
                        p количество комментариев: 0

                    if (user.comments)
                        p количество лайков: #{user.comments.length}
                    else
                        p количество лайков: 0
                    a(href='/users') Назад

            .content
                each post in user.posts
                    .card
                        h2 #{post.title}
                        h5 #{post.createdAt.toISOString().replace('T', ' ').replace('Z', '').slice(0, 19)}
                        p #{post.content}
                        if (post.imgPath)
                            img(src=post.imgPath height='300' width='90%')
                        br
                        a(href='/posts/post/' + post.id) открыть

    script.
      supertokens.init({
        apiDomain: "http://localhost:3001",
        apiBasePath: "/auth"
      });