-
    let menuItmes = [{url: 'index.html', text: 'Главная'},
        {url: 'posts', text: 'Произведения'},
        {url: 'users', text: 'Авторы'},
        {url: 'gallery.html', text: 'Галерея'},
        {url: 'ToDoList.html', text: 'ToDoList'},
    ]
    
header
    nav#menu
            //input.auth#responsive-menu(type='checkbox' onclick='updatemenu()')
            label
            ul
                each item, i in menuItmes
                        if pageNumber === i
                            li
                                a.active(href=item.url)= item.text
                        else
                            li
                                a(href=item.url)= item.text
            if (isLoggedIn)
                button(type="submit" onClick='logout()') Выход
            else
                .loginform
                    input#email(name="email" placeholder="Email" required)
                    input#password(type="password" name="password" placeholder="Password" required)
                    button(type="submit" onClick='login()') Login
